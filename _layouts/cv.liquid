---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title | upcase }}</h1>
    <p class="post-description">View my curriculum vitae</p>
  </header>

  <article>
    <div class="cv text-center">
      <p class="mb-4">
        <a
          href="{{ 'assets/pdf/cv.pdf' | relative_url }}"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary btn-lg"
        >
          <i class="fas fa-file-pdf"></i> View CV (PDF)
        </a>
      </p>
      <p class="text-muted">The CV will open in a new tab</p>
    </div>
  </article>
</div>
